{
    "comments": {
        "lineComment": "\\*",
        "blockComment": [ "(*", "*)" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],
    "folding": {
        "markers": {
            "start": "^\\\\\\* BEGIN TRANSLATION\\b",
            "end": "^\\\\\\* END TRANSLATION\\b"
        }
    },
    "indentationRules": {
        "increaseIndentPattern": "^((?!\\/\\/).)*(if\\s+|variables|define|while\\s+|macro\\s+|with\\s+|either\\s+|begin|\\w+:).*$",
        "decreaseIndentPattern": "$a"
    }
}
