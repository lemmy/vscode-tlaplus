{
    "Macro": {
        "prefix": "macro",
        "body": [
            "macro ${1:name}(${2:params}) begin",
            "\t${0:body}",
            "end macro;"
        ],
        "description": "Create new macro"
    },
    "Define": {
        "prefix": "define",
        "body": [
            "define",
            "\t$0",
            "end define;"
        ],
        "description": "Create new define block"
    },
    "While": {
        "prefix": "while",
        "body": [
            "while ${1:condition} do",
            "\t${0:body}",
            "end while;"
        ],
        "description": "Create new while loop"
    },
    "If": {
        "prefix": "if",
        "body": [
            "if ${1:condition} then",
            "\t${0:body}",
            "end if;"
        ],
        "description": "If block"
    },
    "If-Else": {
        "prefix": "ifel",
        "body": [
            "if ${1:condition} then",
            "\t${2:body}",
            "elseif",
            "\t${0:body}",
            "end if;"
        ],
        "description": "If-else block"
    },
    "With": {
        "prefix": "with",
        "body": [
            "with ${1:variable} do",
            "\t${0:body}",
            "end with;"
        ],
        "description": "With block"
    },
    "Either": {
        "prefix": "either",
        "body": [
            "either",
            "\t${1:block1}",
            "or",
            "\t${0:block2}",
            "end either;"
        ],
        "description": "Either block"
    },
    "Process": {
        "prefix": "proc",
        "body": [
            "process ${1:name} = ${2:value}",
            "begin",
            "\t${0:body}",
            "end process;"
        ]
    }
}
