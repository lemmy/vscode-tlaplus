{
    "rules": {
        "adjacent-overload-signatures": true,
        "align": {
            "options": [
                "parameters",
                "statements",
                "members"
            ]
        },
        "arrow-return-shorthand": true,
        "ban-comma-operator": true,
        "ban-types": {
            "options": [
                [
                    "Object",
                    "Consider using `object`."
                ],
                [
                    "Function",
                    "Prefer a specific function type, like `() => void`."
                ],
                [
                    "Boolean",
                    "Consider using `boolean`."
                ],
                [
                    "Number",
                    "Consider using `number`."
                ],
                [
                    "String",
                    "Consider using `string`."
                ],
                [
                    "Symbol",
                    "Consider using `symbol`."
                ]
            ]
        },
        "comment-format": {
            "options": [
                "check-space"
            ]
        },
        "class-name": true,
        "curly": true,
        "eofline": true,
        "forin": true,
        "import-spacing": true,
        "indent": [true, "spaces", 4],
        "interface-over-type-literal": true,
        "label-position": true,
        "max-line-length": {
            "options": {
                "limit": 120,
                "ignore-pattern": "/.*/g"
            }
        },
        "member-ordering": {
            "options": {
                "order": "fields-first"
            }
        },
        "new-parens": true,
        "no-arg": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": true,
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-super": true,
        "no-duplicate-variable": true,
        "no-duplicate-switch-case": true,
        "no-empty": {
            "options": [
                "allow-empty-functions"
            ]
        },
        "no-eval": true,
        "no-import-side-effect": true,
        "no-internal-module": true,
        "no-invalid-this": false,
        "no-misused-new": true,
        "no-namespace": true,
        "no-parameter-reassignment": true,
        "no-reference": true,
        "no-reference-import": true,
        "no-string-throw": true,
        "no-trailing-whitespace": true,
        "no-unnecessary-initializer": true,
        "no-unsafe-finally": true,
        "no-unused-expression": true,
        "no-var-keyword": true,
        "no-var-requires": true,
        "one-line": {
            "options": [
                "check-else",
                "check-catch",
                "check-finally",
                "check-open-brace",
                "check-whitespace"
            ]
        },
        "prefer-const": true,
        "prefer-for-of": true,
        "quotemark": {
            "options": [
                "single",
                "avoid-escape",
                "avoid-template"
            ]
        },
        "semicolon": [true, "always"],
        "space-before-function-paren": {
            "options": {
                "anonymous": "never",
                "asyncArrow": "always",
                "constructor": "never",
                "method": "never",
                "named": "never"
            }
        },
        "trailing-comma": {
            "options": {
                "esSpecCompliant": true
            }
        },
        "triple-equals": [true, "allow-null-check"],
        "use-isnan": true,
        "variable-name": {
            "options": [
                "ban-keywords",
                "check-format",
                "allow-pascal-case"
            ]
        },
        "whitespace": {
            "options": [
                "check-branch",
                "check-decl",
                "check-operator",
                "check-separator",
                "check-type"
            ]
        }
    },
    "defaultSeverity": "error"
}
